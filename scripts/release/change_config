#!/usr/bin/env node

const pkg = require('../../pkg.json');
const fs = require('fs');
const folder = process.argv[2];
let pkgFileString = '../.' + folder + '/pkg.json', pkgFile;
let pkgFolder = folder.split('/')[folder.split('/').length - 1];
let jsFileName = pkgFolder.replace('-', '.');
let pkgName = '@' + jsFileName.replace('.', '/');
let pkgToMerge = {
  'name': pkgName,
  'main': `src/${jsFileName}.js`,
  'browser': `dist/${jsFileName}.js`,
  'version': pkg.version,
  'licence': pkg.licence,
  'browserslist': pkg.browserslist,
  'repository': pkg.repository,
  'author': pkg.author,
  'bugs': pkg.bugs,
  'homepage': pkg.homepage,
  'devDependencies': pkg.devDependencies,
  'scripts': {
    'test': 'mocha --timeout 10000 test/**/*-test.js',
    'jtest': `MOCHA_FILE=../../../test-results/${pkgFolder}/results.xml mocha -R mocha-junit-reporter --timeout 10000 test/**/*-test.js`,
    'browser-test': 'mocha --timeout 5000 test/browser/*-test.js',
    'unit-test': 'mocha test/unit/*-test.js',
    'rollup': './node_modules/.bin/rollup -c',
    'test-server': 'cd test/public && ../../node_modules/.bin/rollup -c && node server.js 1111'
  },
  'files': [
    'bin',
    'dist',
    'src'
  ]
};

try {
  pkgFile  = require(pkgFileString);
  Object.assign(pkgFile, pkgToMerge);
  fs.writeFileSync(__dirname + '/' + pkgFileString, JSON.stringify(pkgFile, null, 2) + '\n');
  console.log('Done pkg.json');
} catch(e) {
  console.log('No pkg file in this folder');
}

let rollupConfigFileString = '../.' + folder + '/rollup.config.js';
const config = `const getConfig = require('../../../rollup.base');

export default getConfig('${jsFileName.replace(/(^|\.)(\S)/g, s => s.toUpperCase())}');
`;
fs.writeFileSync(__dirname + '/' + rollupConfigFileString, config);

console.log('Done rollup.config.js');
