{
  "name": "Sifrr",
  "private": true,
  "workspaces": [
    "packages/*/*"
  ],
  "version": "0.0.2-alpha",
  "description": "a vanilla js fullstack framework",
  "license": "MIT",
  "browserslist": [
    "chrome >= 55",
    "safari >= 10.1",
    "opera >= 42",
    "firefox >= 53"
  ],
  "scripts": {
    "test": "./scripts/test/runall",
    "jtest": "yarn test -j",
    "test-server": "node ./scripts/test-server -p 1234 -d ./packages/browser/sifrr-dom/test/public,./packages/browser/sifrr-fetch/test/public,./packages/browser/sifrr-route/test/public,./packages/browser/sifrr-serviceworker/test/public,./packages/browser/sifrr-storage/test/public,./packages/server/sifrr-api/test/public,./packages/server/sifrr-cli/test/public,./packages/server/sifrr-seo/test/public",
    "build": "./scripts/yarn rollup -c",
    "publish": "./scripts/yarn publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sifrr/sifrr.git"
  },
  "keywords": [
    "sifrr"
  ],
  "author": "Aaditya Taparia <aadityataparia@gmail.com>",
  "bugs": {
    "url": "https://github.com/sifrr/sifrr/issues"
  },
  "homepage": "https://github.com/sifrr/sifrr",
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-external-helpers": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/git": "^7.0.8",
    "browserslist": "^4.1.0",
    "chai": "^4.1.2",
    "compression": "^1.7.3",
    "connect-static-transform": "^0.9.1",
    "cross-env": "^5.2.0",
    "eslint-plugin-html": "^5.0.0",
    "express": "^4.16.4",
    "file-url": "^2.0.2",
    "istanbul-lib-coverage": "^2.0.1",
    "istanbul-lib-hook": "^2.0.1",
    "istanbul-lib-instrument": "^3.0.0",
    "istanbul-reports": "^2.0.1",
    "mocha": "^5.2.0",
    "mocha-junit-reporter": "^1.18.0",
    "puppeteer": "^1.11.0",
    "repl": "^0.1.3",
    "rollup": "^0.64.1",
    "rollup-plugin-babel": "^4.0.1",
    "rollup-plugin-cleanup": "^3.0.0",
    "rollup-plugin-commonjs": "^9.1.5",
    "rollup-plugin-eslint": "^5.0.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-terser": "^1.0.1",
    "semantic-release": "^15.13.3",
    "sinon": "^7.2.2"
  },
  "nyc": {
    "include": [
      "**/src/**.js"
    ]
  }
}
