{
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "globals": {
    "ENV": true,
    "fs": false,
    "path": false,
    "chai": false,
    "assert": false,
    "expect": false,
    "should": false,
    "puppeteer": false,
    "server": false,
    "port": false,
    "PATH": false,
    "loadBrowser": false,
    "page": false,
    "browser": false
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2017,
    "esversion": 2017
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "warn",
      "always"
    ]
  }
}
